{
  "@context": {
    "odrl": "http://www.w3.org/ns/odrl/2/",
    "cx-policy": "https://w3id.org/catenax/policy/",
    "dct": "http://purl.org/dc/terms/"
  },
  "@type": "odrl:Set",
  "@id": "membership-credential-policy",
  "odrl:profile": "cx-policy:profile:2025.1",
  "odrl:permission": [
    {
      "odrl:action": "odrl:use",
      "odrl:constraint": [
        {
          "@type": "odrl:LogicalConstraint",
          "odrl:and": [
            {
              "@type": "odrl:Constraint",
              "odrl:leftOperand": "cx-policy:Membership",
              "odrl:operator": "odrl:eq",
              "odrl:rightOperand": "active"
            },
            {
              "@type": "odrl:Constraint",
              "odrl:leftOperand": "cx-policy:FrameworkAgreement",
              "odrl:operator": "odrl:eq",
              "odrl:rightOperand": "DataspaceGovernance:1.0"
            }
          ]
        }
      ]
    }
  ],
  "dct:description": "This policy requires the data consumer to hold an active MembershipCredential and have signed the Dataspace Governance Framework Agreement. Based on Catena-X CX-0152 Policy Constraints standard."
}
