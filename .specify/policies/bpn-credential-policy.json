{
  "@context": {
    "odrl": "http://www.w3.org/ns/odrl/2/",
    "cx-policy": "https://w3id.org/catenax/policy/",
    "dct": "http://purl.org/dc/terms/"
  },
  "@type": "odrl:Set",
  "@id": "bpn-credential-policy",
  "odrl:profile": "cx-policy:profile:2025.1",
  "odrl:permission": [
    {
      "odrl:action": "odrl:use",
      "odrl:constraint": [
        {
          "@type": "odrl:Constraint",
          "odrl:leftOperand": "cx-policy:BusinessPartnerNumber",
          "odrl:operator": "odrl:eq",
          "odrl:rightOperand": "BPNL000000000001"
        }
      ]
    }
  ],
  "dct:description": "This policy restricts access to a specific Business Partner identified by their BPN (Business Partner Number). Based on Catena-X CX-0010 and CX-0152 standards. Replace BPNL000000000001 with your partner's BPN."
}
