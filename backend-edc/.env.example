# Backend EDC Environment Configuration
# Copy this to .env and customize for local development

# Server Configuration
PORT=3002

# Backend Mode: hybrid | full
# - hybrid: Uses mock backend for EHR data, EDC for catalog/negotiation
# - full: All data flows through EDC connectors
BACKEND_MODE=hybrid

# EDC API Authentication
EDC_API_KEY=password

# Consumer EDC URLs
CONSUMER_MANAGEMENT_URL=http://localhost:8081
CONSUMER_DSP_URL=http://localhost:8082/api/dsp
CONSUMER_IDENTITY_HUB_URL=http://localhost:7082

# Provider EDC URLs
PROVIDER_MANAGEMENT_URL=http://localhost:8191
PROVIDER_DSP_URL=http://localhost:8192/api/dsp
PROVIDER_IDENTITY_HUB_URL=http://localhost:7092
PROVIDER_PARTICIPANT_ID=provider

# Mock Backend URL (used in hybrid mode)
MOCK_BACKEND_URL=http://localhost:3001

# Timeouts (milliseconds)
EDC_REQUEST_TIMEOUT_MS=30000
EDC_NEGOTIATION_TIMEOUT_MS=60000
EDC_TRANSFER_TIMEOUT_MS=120000
