{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mvd-health.io/schemas/odrl/health-membership-policy.schema.json",
  "title": "Health Membership Policy",
  "description": "ODRL policy requiring active MembershipCredential for dataspace access",
  "type": "object",
  "required": ["@context", "@id", "@type", "policy"],
  "properties": {
    "@context": {
      "type": "array",
      "items": { "type": "string" },
      "contains": {
        "const": "https://w3id.org/edc/connector/management/v0.0.1"
      }
    },
    "@id": {
      "type": "string",
      "pattern": "^health-membership-policy(-[a-z0-9]+)?$"
    },
    "@type": {
      "const": "PolicyDefinition"
    },
    "policy": {
      "type": "object",
      "required": ["@type", "permission"],
      "properties": {
        "@type": {
          "const": "Set"
        },
        "permission": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["action", "constraint"],
            "properties": {
              "action": {
                "const": "use"
              },
              "constraint": {
                "type": "object",
                "required": ["leftOperand", "operator", "rightOperand"],
                "properties": {
                  "leftOperand": {
                    "const": "MembershipCredential"
                  },
                  "operator": {
                    "const": "eq"
                  },
                  "rightOperand": {
                    "const": "active"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "examples": [
    {
      "@context": [
        "https://w3id.org/edc/connector/management/v0.0.1",
        "http://www.w3.org/ns/odrl.jsonld"
      ],
      "@id": "health-membership-policy",
      "@type": "PolicyDefinition",
      "policy": {
        "@type": "Set",
        "permission": [
          {
            "action": "use",
            "constraint": {
              "leftOperand": "MembershipCredential",
              "operator": "eq",
              "rightOperand": "active"
            }
          }
        ]
      }
    }
  ]
}
