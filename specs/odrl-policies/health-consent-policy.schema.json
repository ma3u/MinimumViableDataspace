{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mvd-health.io/schemas/odrl/health-consent-policy.schema.json",
  "title": "Health Consent Policy",
  "description": "ODRL policy requiring DataAccess.level consent and prohibiting re-identification",
  "type": "object",
  "required": ["@context", "@id", "@type", "policy"],
  "properties": {
    "@context": {
      "type": "array",
      "items": { "type": "string" },
      "contains": {
        "const": "https://w3id.org/edc/connector/management/v0.0.1"
      }
    },
    "@id": {
      "type": "string",
      "pattern": "^health-consent-policy(-[a-z0-9]+)?$"
    },
    "@type": {
      "const": "PolicyDefinition"
    },
    "policy": {
      "type": "object",
      "required": ["@type", "obligation", "prohibition"],
      "properties": {
        "@type": {
          "const": "Set"
        },
        "obligation": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["action", "constraint"],
            "properties": {
              "action": {
                "const": "use"
              },
              "constraint": {
                "type": "object",
                "required": ["leftOperand", "operator", "rightOperand"],
                "properties": {
                  "leftOperand": {
                    "const": "DataAccess.level"
                  },
                  "operator": {
                    "enum": ["eq", "in"]
                  },
                  "rightOperand": {
                    "oneOf": [
                      { "const": "processing" },
                      { "const": "analytics" },
                      {
                        "type": "array",
                        "items": {
                          "enum": ["processing", "analytics", "research"]
                        }
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "prohibition": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["action", "constraint"],
            "properties": {
              "action": {
                "const": "use"
              },
              "constraint": {
                "type": "object",
                "required": ["leftOperand", "operator", "rightOperand"],
                "properties": {
                  "leftOperand": {
                    "const": "DataAccess.reidentification"
                  },
                  "operator": {
                    "const": "eq"
                  },
                  "rightOperand": {
                    "oneOf": [
                      { "const": "true" },
                      { "type": "boolean", "const": true }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "examples": [
    {
      "@context": [
        "https://w3id.org/edc/connector/management/v0.0.1",
        "http://www.w3.org/ns/odrl.jsonld"
      ],
      "@id": "health-consent-policy",
      "@type": "PolicyDefinition",
      "policy": {
        "@type": "Set",
        "obligation": [
          {
            "action": "use",
            "constraint": {
              "leftOperand": "DataAccess.level",
              "operator": "eq",
              "rightOperand": "processing"
            }
          }
        ],
        "prohibition": [
          {
            "action": "use",
            "constraint": {
              "leftOperand": "DataAccess.reidentification",
              "operator": "eq",
              "rightOperand": "true"
            }
          }
        ]
      }
    }
  ]
}
